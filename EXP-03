#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define SIZE 5

char matrix[SIZE][SIZE];

void generateMatrix(char key[]) {
    int used[26] = {0};
    int i, j, k = 0;

    used['J' - 'A'] = 1;

    for (i = 0; key[i] != '\0'; i++) {
        char ch = toupper(key[i]);
        if (ch < 'A' || ch > 'Z') continue;
        if (ch == 'J') ch = 'I';

        if (!used[ch - 'A']) {
            matrix[k / 5][k % 5] = ch;
            used[ch - 'A'] = 1;
            k++;
        }
    }

    for (i = 0; i < 26; i++) {
        if (!used[i]) {
            matrix[k / 5][k % 5] = i + 'A';
            k++;
        }
    }
}

void findPosition(char ch, int *row, int *col) {
    if (ch == 'J') ch = 'I';

    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            if (matrix[i][j] == ch) {
                *row = i;
                *col = j;
                return;
            }
        }
    }
}

void encryptPlayfair(char text[]) {
    int i;
    char a, b;
    int r1, c1, r2, c2;

    for (i = 0; i < strlen(text); i += 2) {
        a = text[i];
        b = text[i + 1];

        findPosition(a, &r1, &c1);
        findPosition(b, &r2, &c2);

        // Same row
        if (r1 == r2) {
            text[i]     = matrix[r1][(c1 + 1) % 5];
            text[i + 1] = matrix[r2][(c2 + 1) % 5];
        }
        else if (c1 == c2) {
            text[i]     = matrix[(r1 + 1) % 5][c1];
            text[i + 1] = matrix[(r2 + 1) % 5][c2];
        }
        else {
            text[i]     = matrix[r1][c2];
            text[i + 1] = matrix[r2][c1];
        }
    }
}

void prepareText(char text[]) {
    char temp[100];
    int i, j = 0;

    for (i = 0; text[i] != '\0'; i++) {
        if (isalpha(text[i])) {
            char ch = toupper(text[i]);
            if (ch == 'J') ch = 'I';
            temp[j++] = ch;
        }
    }
    temp[j] = '\0';

    j = 0;
    for (i = 0; temp[i] != '\0'; i++) {
        text[j++] = temp[i];
        if (temp[i] == temp[i + 1]) {
            text[j++] = 'X';
        }
    }
    if (j % 2 != 0)
        text[j++] = 'X';

    text[j] = '\0';
}

int main() {
    char key[50], plaintext[100];

    printf("Enter keyword: ");
    fgets(key, sizeof(key), stdin);
    key[strcspn(key, "\n")] = '\0';

    printf("Enter plaintext: ");
    fgets(plaintext, sizeof(plaintext), stdin);
    plaintext[strcspn(plaintext, "\n")] = '\0';

    generateMatrix(key);
    prepareText(plaintext);
    encryptPlayfair(plaintext);

    printf("Encrypted text: %s\n", plaintext);

    return 0;
}
