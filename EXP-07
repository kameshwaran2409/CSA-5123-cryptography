#include <stdio.h>
#include <string.h>

int main()
{
    char cipher[1000];
    int freq[256] = {0};
    int i;

    printf("Enter Cipher Text:\n");
    gets(cipher);

    for(i = 0; cipher[i] != '\0'; i++)
    {
        freq[(unsigned char)cipher[i]]++;
    }

    printf("\nCharacter Frequency:\n");
    for(i = 0; i < 256; i++)
    {
        if(freq[i] > 0)
        {
            printf("'%c' : %d\n", i, freq[i]);
        }
    }

    for(i = 0; cipher[i] != '\0'; i++)
    {
        switch(cipher[i])
        {
            case 'â€¡': printf("E"); break;
            case '8': printf("T"); break;
            case '5': printf("A"); break;
            case ';': printf("O"); break;
            case ')': printf("I"); break;
            case '*': printf("N"); break;
            default:  printf("%c", cipher[i]);
        }
    }

    return 0;
}
