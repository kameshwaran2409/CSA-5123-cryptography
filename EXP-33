#include <stdio.h>
#include <stdint.h>

int IP[64] = {
    58,50,42,34,26,18,10,2,
    60,52,44,36,28,20,12,4,
    62,54,46,38,30,22,14,6,
    64,56,48,40,32,24,16,8,
    57,49,41,33,25,17,9,1,
    59,51,43,35,27,19,11,3,
    61,53,45,37,29,21,13,5,
    63,55,47,39,31,23,15,7
};

int FP[64] = {
    40,8,48,16,56,24,64,32,
    39,7,47,15,55,23,63,31,
    38,6,46,14,54,22,62,30,
    37,5,45,13,53,21,61,29,
    36,4,44,12,52,20,60,28,
    35,3,43,11,51,19,59,27,
    34,2,42,10,50,18,58,26,
    33,1,41,9,49,17,57,25
};

/* Simple Feistel Function (Educational) */
uint32_t feistel(uint32_t R, uint32_t K) {
    return (R ^ K);
}

/* DES Encryption/Decryption */
uint64_t DES(uint64_t block, uint64_t key) {
    uint64_t permuted = 0;

    /* Initial Permutation */
    for (int i = 0; i < 64; i++) {
        permuted <<= 1;
        permuted |= (block >> (64 - IP[i])) & 1;
    }

    uint32_t L = permuted >> 32;
    uint32_t R = permuted & 0xFFFFFFFF;

    /* 16 Rounds */
    for (int i = 0; i < 16; i++) {
        uint32_t temp = R;
        R = L ^ feistel(R, key & 0xFFFFFFFF);
        L = temp;
    }

    uint64_t combined = ((uint64_t)R << 32) | L;
    uint64_t cipher = 0;

    /* Final Permutation */
    for (int i = 0; i < 64; i++) {
        cipher <<= 1;
        cipher |= (combined >> (64 - FP[i])) & 1;
    }

    return cipher;
}

int main() {
    uint64_t plaintext = 0x0123456789ABCDEF;
    uint64_t key = 0x133457799BBCDFF1;  

    uint64_t ciphertext = DES(plaintext, key);
    uint64_t decrypted = DES(ciphertext, key);

    printf("Plaintext : %016llX\n", plaintext);
    printf("Ciphertext: %016llX\n", ciphertext);
    printf("Decrypted : %016llX\n", decrypted);

    return 0;
}
